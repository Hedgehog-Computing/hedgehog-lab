{
  "plugins": ["prettier", "@typescript-eslint"],
  "parser":  "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "tabWidth": 2,
        "semi": true,
        "trailingComma": "none",
        "singleQuote": true,
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "alwaysParens":"avoid",
        "@typescript-eslint/ban-ts-ignore": "off",
        "endOfLine": "auto"
      }
    ]
  }
}
